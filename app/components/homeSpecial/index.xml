<template name="homeSpecial">
    <view class="homeSpecial">
        <view class="title">-- 专题推荐 --</view>
        <view class="special" wx:for="{{items}}" wx:key="item.documentId">
            <view class="preview">
                <image src="{{item.documentAvatar}}"  />
            </view>
            <swiper>
                <block wx:for="{{item.productList}}" wx:key="*this">
                    <swiper-item class="swiper-item">
                        <block wx:for="{{item}}" wx:key="*this">
                            <navigator class="item" url="../product/index?title=navigate">
                                <image src="{{item.image}}"  />
                                <text>{{item.title}}</text>
                                <text class="sub">{{item.other}}元</text>
                            </navigator>
                        </block>
                    </swiper-item>
                </block>
            </swiper>
        </view>
    </view>
</template>